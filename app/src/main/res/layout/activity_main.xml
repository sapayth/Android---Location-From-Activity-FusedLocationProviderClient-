<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/latiduteTextView"
        android:layout_width="207dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="195dp"
        android:text="Latidute: "
        app:layout_constraintBottom_toTopOf="@+id/longitudeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="204dp"
        android:layout_height="0dp"
        android:layout_marginBottom="89dp"
        android:text="Longitude: "
        app:layout_constraintBottom_toTopOf="@+id/findLocationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/latiduteTextView" />

    <Button
        android:id="@+id/findLocationButton"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="104dp"
        android:text="Show Lat Lon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="findLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/longitudeTextView" />
</android.support.constraint.ConstraintLayout>